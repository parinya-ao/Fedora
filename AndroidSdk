1. download android sdk from
https://developer.android.com/studio/index.html#command-line-tools-only

2. unzip file

3. create
mkdir -p ~/Android/Sdk

cd ~/Downloads/

# Create the specific path for the tools
mkdir -p ~/Android/Sdk/cmdline-tools/latest

# Move the extracted files to the new location
mv cmdline-tools/* ~/Android/Sdk/cmdline-tools/latest/

# You can now remove the downloaded zip file and the empty folder
rm commandlinetools-linux-13114758_latest.zip
rmdir cmdline-tools

setup path for fish shell
# Add the ANDROID_HOME variable
set -U ANDROID_HOME $HOME/Android/Sdk

# Add the command-line tools, platform-tools, and emulator to your PATH
set -U fish_user_paths $ANDROID_HOME/cmdline-tools/latest/bin $ANDROID_HOME/platform-tools $ANDROID_HOME/emulator $fish_user_paths

# First, accept the SDK licenses
yes | sdkmanager --licenses

# Install platform-tools (includes adb), the platform for Android 14, and build-tools
sdkmanager "platform-tools" "platforms;android-34" "build-tools;34.0.0"

sudo dnf install java-17-openjdk-devel
